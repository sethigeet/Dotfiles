# vim: filetype=i3config

# --- Initial Setup --- #
exec_always --no-startup-id ~/.config/polybar/launch.sh
exec_always --no-startup-id autotiling
exec_always --no-startup-id ~/Scripts/wm/autostart

# --- Basic Definitions --- #
smart_gaps on
smart_borders on
set $inner_gaps  10
set $outer_gaps  0
set $term        --no-startup-id alacritty
set $mod         Mod4
set $alt         Mod1
set $scripts_dir ~/Scripts

# Use Mouse + $mod to drag floating windows to their wanted position
floating_modifier $mod

# --- Define Gaps --- #
for_window [class="^.*"] border pixel 2
gaps inner $inner_gaps
gaps outer $outer_gaps

# --- Basic Key Bindings --- #

# Return
bindsym $mod+Return 		         exec $term
bindsym $mod+Shift+Return	       exec $term --working-directory  $(xcwd)

# Escape
# --- NONE ---

# Space
bindsym $mod+space 			         exec --no-startup-id rofi -show drun

# --- Letter Key Bindings --- #

# A
bindsym $mod+a		               exec $term -e alsamixer

# B
bindsym $mod+b 			             exec $term -e bpytop

# C
bindsym $mod+c 			             exec --no-startup-id $scripts_dir/rofi/edit-config

# D
# --- NONE ---

# E
bindsym $mod+e 			             exec --no-startup-id nautilus
bindsym $mod+Shift+e		         exec --no-startup-id code

# F
bindsym $mod+f			             fullscreen toggle
bindsym $mod+Shift+f 	           floating toggle

# G
bindsym $mod+g		               gaps inner current set $inner_gaps; gaps outer current set $outer_gaps
bindsym $mod+Shift+g		         gaps inner current set 0; gaps outer current set 0

# H
bindsym $mod+h			             focus left
bindsym $mod+Ctrl+h	   	         move left 30
bindsym $mod+Shift+h             resize shrink width 5 px or 5 ppt

# I
# --- NONE ---

# J
bindsym $mod+j			             focus down
bindsym $mod+Ctrl+j		           move down 30
bindsym $mod+Shift+j             resize shrink height 5 px or 5 ppt

# K
bindsym $mod+k			             focus up
bindsym $mod+Ctrl+k		           move up 30
bindsym $mod+Shift+k             resize grow height 5 px or 5 ppt

# L
bindsym $mod+l			             focus right
bindsym $mod+Ctrl+l 		         move right 30
bindsym $mod+Shift+l             resize grow width 5 px or 5 ppt

# M
bindsym $mod+m			             layout toggle

# N
bindsym $mod+n			             exec --no-startup-id kill -s USR1 $(pidof deadd-notification-center)

# O
# --- NONE ---

# P
bindsym $mod+p			             exec --no-startup-id flameshot gui -p ~/Pictures/Screenshots
bindsym $mod+Shift+p		         exec --no-startup-id flameshot full -p ~/Pictures/Screenshots

# Q
bindsym $mod+q			             [con_id="__focused__" instance="^(?!dropdown_).*$"] kill
bindsym $mod+Shift+q		         [con_id="__focused__" instance="^(?!dropdown_).*$"] exec --no-startup-id kill -9 `xdotool getwindowfocus getwindowpid`

# R
bindsym $mod+Ctrl+r		           restart

# S
bindsym $mod+s        			     exec --no-startup-id $scripts_dir/rofi/rofi-bang
bindsym $mod+Ctrl+s        			 sticky toggle
bindsym $mod+Shift+s			       split toggle

# T
bindsym $mod+t 			             layout toggle tabbed 
bindsym $mod+Shift+t             focus mode_toggle

# U
bindsym $mod+u                   [urgent=latest] focus

# V
bindsym $mod+v	                 exec --no-startup-id $scripts_dir/misc/start-vifm

# W
bindsym $mod+w 			             exec --no-startup-id brave

# X
bindsym $mod+x	                 exec --no-startup-id $scripts_dir/rofi/power-menu

# Y
# --- NONE ---

# Z
bindsym $mod+z	                 exec --no-startup-id $scripts_dir/rofi/file-browser


# --- Workspace Key Bindings --- #
bindsym $mod+Tab		             workspace next
bindsym $mod+Shift+Tab           workspace prev
bindsym $mod+apostrophe		       split horizontal ;; exec $term
bindsym $mod+slash		           split vertical ;; exec $term
bindsym $mod+Shift+slash	       kill
bindsym $mod+backslash		       workspace back_and_forth


# --- Number Key Bindings --- #

# switch to workspace
bindsym $mod+1		workspace $ws1
bindsym $mod+2		workspace $ws2
bindsym $mod+3		workspace $ws3
bindsym $mod+4		workspace $ws4
bindsym $mod+5		workspace $ws5
bindsym $mod+6		workspace $ws6
bindsym $mod+7		workspace $ws7
bindsym $mod+8		workspace $ws8
bindsym $mod+9		workspace $ws9
bindsym $mod+0		workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10


# --- Arrow Keys --- #

# Left
bindsym $mod+Left		      focus left
bindsym $mod+Shift+Left   resize shrink width 5 px or 5 ppt
bindsym $mod+Ctrl+Left		move workspace to output right

# Right
bindsym $mod+Right 		    focus right
bindsym $mod+Shift+Right  resize grow width 5 px or 5 ppt
bindsym $mod+Ctrl+Right		move workspace to output left

# Down
bindsym $mod+Down		      focus down
bindsym $mod+Shift+Down   resize shrink height 5 px or 5 ppt
bindsym $mod+Ctrl+Down		move workspace to output up

# Up
bindsym $mod+Up			      focus up
bindsym $mod+Shift+Up     resize grow height 5 px or 5 ppt
bindsym $mod+Ctrl+Up		  move workspace to output down


# --- Media Key Bindings --- #

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% #decrease sound volume
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound


# --- Workspace Settings --- #
set $ws1  "1"
set $ws2  "2"
set $ws3  "3"
set $ws4  "4"
set $ws5  "5"
set $ws6  "6"
set $ws7  "7"
set $ws8  "8"
set $ws9  "9"
set $ws10 "10"

# Assign Workspaces to particular apps
# assign [class="Alacritty"] $ws1
# assign [class="Google-chrome"] $ws2
# assign [class="Code"] $ws3

# Set particular settings for particular apps
for_window [window_role="GtkFileChooserDialog"] resize set 800 600
for_window [window_role="GtkFileChooserDialog"] move position center
for_window [title="^Android Emulator -"]        floating enable
for_window [title="*Zoom*"]                     floating enable
for_window [title="^Participants*"]             floating enable
for_window [class="kite"]                       floating enable


# --- Window borders --- #

# class                 border  backgr. text    indicator child_border
client.focused          #FFCC66 #1F2430 #FFFFFF #FFCC66   #FFCC66
client.focused_inactive #FFD580 #1F2430 #FFFFFF #5F676A   #5F676A
client.unfocused        #CBCCC6 #1F2430 #FFFFFF #CBCCC6   #CBCCC6
client.urgent           #FF3333 #1F2430 #FFFFFF #F28779   #F28779
client.placeholder      #000000 #1F2430 #FFFFFF #000000   #0c0c0c
client.background       #1F2430
