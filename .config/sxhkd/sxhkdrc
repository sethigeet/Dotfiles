# SXHKD
super + ctrl + s; r
	killall sxhkd && setsid sxhkd

# Apps
super + Return
	$TERMINAL

super + {b}
	$TERMINAL -e {bpytop}

super + {e,w,i}
	{nautilus,brave,vimiv}

super + shift + {e}
	{code}

# Manage Windows
super + semicolon
	skippy-xd

# Custom Scripts
super + space
	rofi -show drun

super + {c,p,s,v}
	{edit-config,screenshot,run-script,vifm}

super + shift + {m,s,v,x,z}
	{spotify,edit-script,clipboard,power-menu,file-browser}

# Media
XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}10%
shift + XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}2%
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioPlay
	playerctl play-pause
XF86AudioPrev
	playerctl previous
XF86AudioNext
	playerctl next

# Mouse Clicks using keyboard!
Menu
	xdotool click 3
ctrl + Menu
	xdotool click 2
