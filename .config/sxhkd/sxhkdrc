# SXHKD
super + ctrl + s; r
	killall sxhkd && setsid sxhkd

# Apps
super + Return
	$TERMINAL

super + {a,b}
	alacritty -e {alsamixer,bpytop}

super + {e,w,i}
	{nautilus,brave,vimiv}

super + shift + {e}
	{code}

# Custom Scripts
super + space
	rofi -show drun

super + {c,p,s,v,x,z}
	{edit-config,screenshot,run-script,start-vifm,power-menu,file-browser}

super + shift + {s,v}
	{edit-script,clipboard}

# Media
XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}10%
shift + XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}2%
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioPlay
	sp playpause
XF86AudioPrev
	sp prev
XF86AudioNext
	sp next

# Mouse Clicks using keyboard!
Menu
	xdotool click 3
ctrl + Menu
	xdotool click 2
