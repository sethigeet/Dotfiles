#!/bin/sh

# Load dotfiles:
shell_config="$HOME/.config/shell/init_shell.sh"
zsh_config="$HOME/.config/zsh/init_zsh.zsh"
bash_config="$HOME/.config/bash/init_bash.bash"

[ -r "$shell_config" ] && [ -f "$shell_config" ] && source "$shell_config"

# if running zsh
if [ -n "$ZSH_VERSION" ]; then
	file="$zsh_config"
# if running bash
elif [ -n "$BASH_VERSION" ]; then
	file="$bash_config"
fi

[ -r "$file" ] && [ -f "$file" ] && source "$file"
unset file
